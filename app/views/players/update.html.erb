<h1 align="center">Update the players' information</h1>

<form action="/players/<%=@player.id%>" method="POST" align="center">
	<input type="hidden" name="_method" value="PATCH">
	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
	<p>
		<label>Enter First Name</label>
		<input type="text" name="player[name]" value="<%=@player.name%>">
	</p>

	<p>
		<label>Enter Last Name</label>
		<input type="text" name="player[lastname]" value="<%=@player.lastname%>">
	</p>

	<p>
		<label>Enter Age</label>
		<input type="text" name="player[age]" value="<%=@player.age%>">
	</p>
	<p>
		<label>Enter Team</label>
		<input type="text" name="player[team]" value="<%=@player.team.name%>">
	</p>
	<input type=submit value="Update">
</form>
<br>
<div align="center">
<a href="/players">Go back</a>
</div>